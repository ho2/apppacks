<h1>Listing packages</h1>

<table class="table table-striped table-condensed">
  <tr>
    <th>ID</th>
    <th>Action</th>
    <th>pName</th>
    <th>vNo</th>
    <th>dPath</th>
    <th>pNamePath</th>
    <th>pNotation</th>
    <th>fUpdate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <td><%= package.id %></td>
    <td><%= package.action %></td>
    <td><%= package.packageName %></td>
    <td><%= package.versionNumber %></td>
    <td><%= package.downloadPath %></td>
    <td><%= package.packageNamePath %></td>
    <td><%= package.packageNotation %></td>
    <td><%= package.forceUpdate %></td>
    <td><%= link_to 'Show', package %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

